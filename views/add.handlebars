<h1>
  <section id="add" class="container">
    <div class="form-wrap">
      <h1>Add A Todo</h1>
      <p>Please fill out the form below to add a Todo.</p>
      {{#each errors}}
      <div class="error">
        <p>{{text}}</p>
      </div>

      {{/each}}
      <form>
        <div class="input-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" class="input-box"
            placeholder="eg. practice Javascript, rewatch React videos" maxlength="100 value={{name}}">
        </div>
        <div class="input-group">
          <label for="technologies">Priority</label>
          <input type="text" name="technologies" id="technologies" class="input-box" placeholder="eg. Low, Medium, High"
            maxlength="100" values={{priority}}>
        </div>
        <div class="input-group">
          <label for="budget">Completed?</label>
          <input type="text" name="budget" id="budget" class="input-box" placeholder="enter True or False">
        </div>
        <div class="input-group">
          <label for="description">Todo Description</label>
          <textarea name="description" id="description" class="input-box" placeholder="Describe the details of the Todo"
            rows="10" required>{{description}}</textarea>
        </div>
        {{!-- <div class="input-group">
          <label for="budget">Contact Email</label>
          <input type="email" name="contact_email" id="contactemail" class="input-box" placeholder="Enter an email"
            required>
        </div> --}}
        <input type="submit" value="Add Todo" class="btn btn-reverse">
      </form>
    </div>
  </section>
</h1>